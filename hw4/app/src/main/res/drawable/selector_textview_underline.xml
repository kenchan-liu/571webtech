<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#643BC3" /> <!-- 设置选中状态下的背景颜色 -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#643BC3" /> <!-- 默认状态下的背景颜色 -->
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#A78CE4" /> <!-- 下划线的颜色 -->
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#A78CE4" /> <!-- 设置选中状态下的背景颜色 -->
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#643BC3" /> <!-- 默认状态下的背景颜色 -->
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
